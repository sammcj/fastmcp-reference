# Example MCP Server Configuration
# Copy this file to .env and customize

# Server identity
MCP_SERVER_NAME=example-server
MCP_ENVIRONMENT=dev  # dev, staging, production

# Transport (stdio for local/Claude Desktop, http for cloud deployment)
MCP_TRANSPORT=stdio
MCP_LOG_LEVEL=INFO
# MCP_LOG_FILE=/tmp/mcp-example-server.log  # Auto-generated if not set

# HTTP transport settings (only used if MCP_TRANSPORT=http)
MCP_HTTP_HOST=0.0.0.0
MCP_HTTP_PORT=8000

# Error handling
MCP_MASK_ERROR_DETAILS=false  # Show full errors in dev
MCP_INCLUDE_TRACEBACK=true    # Include stack traces in dev

# Rate limiting
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_REQUESTS_PER_SECOND=10.0
MCP_RATE_LIMIT_BURST_CAPACITY=20

# Retry configuration
MCP_RETRY_ENABLED=true
MCP_RETRY_MAX_ATTEMPTS=3

# File operations security
MCP_ALLOWED_FILE_DIRECTORIES=["/tmp", "./data"]
MCP_MAX_FILE_SIZE_MB=100
MCP_FILE_DEFAULT_PERMISSIONS=0600  # Octal notation (owner read/write only)

# URL fetching security
MCP_URL_ALLOW_PRIVATE_IPS=false  # Block SSRF attacks
MCP_URL_REQUIRE_HTTPS=false      # Allow HTTP in dev (true in production)
MCP_URL_MAX_SIZE_MB=10
MCP_URL_TIMEOUT_SECONDS=30

# Observability (optional)
MCP_ENABLE_TRACING=false
MCP_ENABLE_METRICS=false
# MCP_OTLP_ENDPOINT=http://localhost:4317
# MCP_PROMETHEUS_PORT=9090
